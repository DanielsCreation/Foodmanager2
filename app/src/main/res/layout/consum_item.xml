<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <TextView
            android:id="@+id/consum_id_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/consum_name_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Spaghetti"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#000"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/consum_brand_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/food_name_txt"
            android:text="Barilla"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@+id/consum_name_txt"
            app:layout_constraintTop_toBottomOf="@+id/consum_name_txt" />

        <TextView
            android:id="@+id/consum_contents_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="500"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@+id/consum_brand_txt"
            app:layout_constraintTop_toBottomOf="@+id/consum_brand_txt" />

        <TextView
            android:id="@+id/purchase_unit_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="3dp"
            android:text="Gramm"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/purchase_contents_txt"
            app:layout_constraintTop_toTopOf="@+id/purchase_contents_txt" />

        <TextView
            android:id="@+id/consum_price_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginStart="50dp"
            android:layout_marginLeft="50dp"
            android:text="3â‚¬"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/consum_name_txt"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/consum_store_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="EDEKA"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@+id/consum_price_txt"
            app:layout_constraintTop_toBottomOf="@+id/consum_price_txt" />

        <TextView
            android:id="@+id/purchase_quantity_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="Anzahl: 3"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@+id/consum_price_txt"
            app:layout_constraintTop_toBottomOf="@+id/consum_store_txt" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>